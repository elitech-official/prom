<div class="category container col-xs-12 col-sm-8 col-md-8 col-lg-8">
  <div class="item">
    <h3> <%= @category.name %> </h3>
  </div>
  <div class="subcategories container col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <% @subcategories.each do |subcategory|%>
    <%= render partial: 'subcategory/subcategory', locals: {subcategory: subcategory} %>
    <% end %>
  </div>
</div>
