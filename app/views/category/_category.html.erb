<div class="category-item col-xs-4 col-sm-3 col-md-3 col-lg-3">
  <span class="name block col-xs-12 col-sm-12 col-md-12 col-lg-12"> <%= cat.name %> </span>
  <div class=" category-item-image col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <a href=<%= category_path(id: cat.id) %>>
    <%= image_tag cat.image_path, class: "category-image-small" %>
    </a>
  </div>
</div>
