<div class="subcategory-item col-xs-6 col-sm-4 col-md-3 col-lg-3">
  <div class="image col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <%= image_tag subcategory.image_path %>
  </div>
  <div class="text text-left col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <span class="text-left"> <%= link_to subcategory.name, subcategory_path(id: subcategory.id) %> </span>
  </div>
</div>
