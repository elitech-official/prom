<div class="company-show container col-xs-12 col-sm-12 col-md-12 col-lg-12">
	<div class="company-show-header col-xs-12 col-sm-12 col-md-12 col-lg-12">
		<div class="company-show-title col-xs-12 col-sm-12 col-md-12 col-lg-12">

			<div class="company-show-image col-xs-4 col-sm-3 col-md-3 col-lg-3">
				<%= image_tag @company.paper_image %>
			</div>
			<div class="company-show-name col-xs-8 col-sm-9 col-md-9 col-lg-9">
				<p>
					<%= @company.name %>
			</div>
		</div>
	</div>

	<div class="company-show-body left col-xs-12 col-sm-8 col-md-8 col-lg-8">
		<ul class="nav nav-tabs">
			<li class="active">
				<a data-toggle="tab" href="#about">О Компании</a>
			</li>
			<li>
				<a data-toggle="tab" href="#docs">Документы</a>
			</li>
			<li>
				<a data-toggle="tab" href="#showmap">Карта</a>
			</li>
		</ul>
		<div class="tab-content">
		<div id="about" class="col-xs-12 col-sm-12 col-md-12 col-lg-12 tab-pane fade in active">
			<div class="about-creds col-xs-12 col-sm-12 col-md-12 col-lg-12">
				<span class="company-show-resizable"> Год основания: <%= @company.year_created %> </span>
				<span class="company-show-resizable"> Тип предприятия: <%= @company.comp_type %> </span>
				<span class="company-show-resizable"> Основной бизнес: <%= @company.business %> </span>
				<span class="company-show-resizable"> Описание: <%= @company.description %> </span>
				<span class="company-show-resizable"> Сайт предприятия: <%= @company.website %> </span>
			</div>
			<div class="catalog col-xs-12 col-sm-12 col-md-12 col-lg-12">
				<span> Каталог продукции предприятия </span>

			</div>
			
			<div class="gallery col-xs-12 col-sm-12 col-md-12 col-lg-12">
				<span> Фотогалерея</span>
								<div class="transparent-image col-xs-6 col-sm-4 col-md-4 col-lg-4">
            <a class="fancybox" rel="fancybox-thumb" href=<%= image_path 'comp_custom/zavod.jpg'%> title="Наше предприятие">
              <%= image_tag 'comp_custom/zavod.jpg'%>
            </a>
          </div>
          <div class="transparent-image col-xs-6 col-sm-4 col-md-4 col-lg-4">
            <a class="fancybox" rel="fancybox-thumb" href=<%= image_path 'comp_custom/zavod2.jpg'%> title="Наше предприятие">
              <%= image_tag 'comp_custom/zavod2.jpg'%>
            </a>
          </div>
          <div class="transparent-image col-xs-6 col-sm-4 col-md-4 col-lg-4">
            <a class="fancybox" rel="fancybox-thumb" href=<%= image_path 'comp_custom/zavod3.jpg'%> title="Наше предприятие">
              <%= image_tag 'comp_custom/zavod3.jpg'%>
            </a>
          </div>
          <div class="transparent-image col-xs-6 col-sm-4 col-md-4 col-lg-4">
            <a class="fancybox" rel="fancybox-thumb" href=<%= image_path 'comp_custom/zavod4.jpg'%> title="Наше предприятие">
              <%= image_tag 'comp_custom/zavod4.jpg'%>
            </a>
          </div>
          <div class="transparent-image col-xs-6 col-sm-4 col-md-4 col-lg-4">
            <a class="fancybox" rel="fancybox-thumb" href=<%= image_path 'comp_custom/zavod5.jpg'%> title="Наше предприятие">
              <%= image_tag 'comp_custom/zavod5.jpg'%>
            </a>
          </div>
          <div class="transparent-image col-xs-6 col-sm-4 col-md-4 col-lg-4">
            <a class="fancybox" rel="fancybox-thumb" href=<%= image_path 'comp_custom/zavod6.jpg'%> title="Наше предприятие">
              <%= image_tag 'comp_custom/zavod6.jpg'%>
            </a>
          </div>
			</div>
			
		</div>
		<div id="docs" class="col-xs-12 col-sm-12 col-md-12 col-lg-12 tab-pane fade">
			<span> Документы, предоставленные предприятием </span>
		</div>
		<div id="showmap" class="col-xs-12 col-sm-12 col-md-12 col-lg-12  tab-pane fade">
			<div id="map"> <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d5128.633246979864!2d36.231342514469205!3d50.00542042214876!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sru!2sua!4v1449212653364" width="100%" height="100%" frameborder="0" style="border:0" allowfullscreen></iframe> </div>
		</div>
		</div>
	</div>
	<div class="company-show-body right col-xs-12 col-sm-4 col-md-4 col-lg-4">
		<div class="company-show-contacts">
			<span class="contacts-header"> Контактная информация </span>
			<table>
			<% if @company.address%>
			<tr>
				<td>
			<i class="fa fa-map-marker"> </i>
			</td>
			<td>
			<span class="company-show-resizable">  <%= @company.address%> </span>
			</td>
			</tr>
			<% end %>
			<% if @company.phone%>
			<tr>
				<td>
			 <i class="fa fa-phone"> </i>
			 </td>
			<td>
			<span class="company-show-resizable"> <%= @company.phone%> </span>
			</td>
			</tr>
			<% end %>
			<% if @company.mobile_phone%>
			<tr>
				<td>
			<i class="fa fa-mobile-phone"> </i>
			</td>
			<td>
			<span class="company-show-resizable">  <%= @company.mobile_phone%> </span>
			</td>
			</tr>
			<% end %>
			<% if @company.email%>
			<tr>
				<td>
			<i class="fa fa-envelope-o"> </i>
			</td>
			<td>
			<span class="company-show-resizable">  <%= @company.email%> </span>
			</td>
			</tr>
			<% end %>
			</table>
		</div>



<script>

var initMap = function() {
  var map, marker, myLatLng;
  myLatLng = {
    lat: 50.0060646,
    lng: 36.229062
  };
  map = new google.maps.Map(document.getElementById('map'), {
    zoom: 8,
    center: myLatLng
  });
  marker = new google.maps.Marker({
    position: myLatLng,
    map: map,
    title: 'Карта'
  });
};


$('.fancybox').fancybox({
  openEffect: 'none',
  closeEffect: 'none'
});


</script>
