<div class="container header col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <div class="header second-row col-xs-12 col-sm-12 col-md-12 col-lg-12">
           <div class="register-info col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <% if user_signed_in? %>
            Вошел как <strong> <%= current_user.email %> </strong>.
            <%= link_to 'Редактировать профиль', edit_user_registration_path, :class => 'navbar-link' %> |
            <%= link_to "Выйти", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
          <% else %>
            <%= link_to "Регистрация", new_user_registration_path, :class => 'navbar-link'  %> |
            <%= link_to "Вход", new_user_session_path, :class => 'navbar-link'  %>
          <% end %>
      </div>
      <div class="header socials col-xs-12 col-sm-6 col-md-6 col-lg-6">
        <%= image_tag 'herb.png'%>
        <span id="header-title"> Бизнес Харьков </span>
      </div>
      <div class="header buttons col-xs-12 col-sm-6 col-md-6 col-lg-6">
        <div class=" contact col-xs-4 col-sm-4 col-md-4 col-lg-4">
          <span> Контакты </span>
        </div>
        <div class="header buttons signup col-xs-4 col-sm-4 col-md-4 col-lg-4">
          <span> Регистрация </span>
        </div>
        <div class="header buttons about col-xs-4 col-sm-4 col-md-4 col-lg-4">
          <span> О нас </span>
        </div>
      </div>
    </div>
</div>
<div class="search-form text-center col-xs-12 col-sm-12 col-md-12 col-lg-12">
  <%= form_tag("/search", method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>  
</div>
<div class="horline-header col-xs-12 col-sm-12 col-md-12 col-lg-12">
</div>
