<div class="container header col-xs-12 col-sm-12 col-md-12 col-lg-12">
	<div class="title col-xs-12 col-sm-6 col-md-6 col-lg-6">
		<%= image_tag 'icons/galstuk.png'%>
		<span class='header-title'> Бизнес Харьков </span>
	</div>
	<div class="credentials col-xs-12 col-sm-6 col-md-6 col-lg-6">
		<% if user_signed_in? %>
		<div class="float-left"> <a href="<%= edit_user_registration_path%>"><span class="glyphicon glyphicon-user"></span> <%= current_user.email%></a> </div>
		<div class="float-right"> <%= link_to destroy_user_session_path, method: :delete do %> <span class="glyphicon glyphicon-log-out"></span> Выйти</div>
			<% end %> </span>
		<% else %>
		<div class=" float-left"> <a href="<%= new_user_registration_path%>"><span class="glyphicon glyphicon-check"></span> Зарегистрироваться</a> </div>
		<div class=" float-right"> <a href=" <%= new_user_session_path%>"><span class="glyphicon glyphicon-log-in"></span> Войти </a> </div>
		<% end %>
	</div>
</div>
<div class="clearfix"> </div>
